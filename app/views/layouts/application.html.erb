<!DOCTYPE html>
<html>
  <head>
    <title>Flights</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if session[:user_id] %>
  	<%= link_to 'logout', logout_path, method: :delete %>
  <% else %>
  	<%= link_to 'Login', login_path %>
  <% end %>

    <%= yield %>
  </body>
</html>
